<head> <%= erb :head %> </head>

<h1> Links </h1>

<ul id='links'>
    <% @links.each do |link| %>
    <li>
      Title: <%= link.title %> -
      URL: <%= link.url %>
      <% link.tags.each do |tag| %>
        Tag(s): <%= tag.name %>
      <% end %>
    </li>
    <% end %>
</ul>

<center><form action='/links/new'>
<input type="submit" value="Add New Link" class="button">
</form></center>
